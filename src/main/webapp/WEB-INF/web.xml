<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="true" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>MochaServer</display-name>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>net.desertconsulting.mochatemplate.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/*</url-pattern>
        <!-- every page request will be passed to MainServlet, which will treat the path-info as a template file path -->
    </servlet-mapping>
</web-app>
